{
    "name": "ePPO",
    "description": "Pre-Printed Orders for Take-Home Chemotherapy  Developed by Steven Song Wang  Powered by Laravel, Bootstrap and JQuery frameworks",
    "keywords": ["ePPO", "laravel", "prescription", "ppo", "regimen", "chemotherapy"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "ext-pdo_sqlite":"*",
        "laravel/framework": "5.1.*",
        "laravelcollective/html": "5.1.*",
        "barryvdh/laravel-debugbar": "^2.0",
        "barryvdh/laravel-snappy": "0.2.x",
        "wemersonjanuario/wkhtmltopdf-windows": "0.12.2.3",
        "knplabs/knp-snappy": "^0.4.3",
        "h4cc/wkhtmltopdf-i386": "0.12.x"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "eppo\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
